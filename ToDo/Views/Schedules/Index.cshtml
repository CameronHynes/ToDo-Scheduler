@model IEnumerable<ToDo.Models.Schedule>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">


@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.Worker.Name)
        </th>
        <td>
            @Html.ActionLink("Edit", "../Workers/Edit", new { id=item.Worker.ID }) |
            @Html.ActionLink("Details", "../Workers/Details", new { id = item.Worker.ID }) |
            @Html.ActionLink("Delete", "../Workers/Delete", new { id = item.Worker.ID })
        </td>
    </tr>
    <tr>
        <th>Task Description</th>
        <th> Start time</th>
        <th>Deadline</th>

    </tr>
    foreach (var task in item.Tasks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => task.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => task.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => task.DeadLine)
            </td>
            <td>
                @Html.ActionLink("Edit", "../Tasks/Edit", new { id = task.ID }) |
                @Html.ActionLink("Details", "../Tasks/Details", new { id = task.ID }) |
                @Html.ActionLink("Delete", "../Tasks/Delete", new { id = task.ID })
            </td>
        </tr>
    }
    <tr class="blank_row">
        <td colspan="3"></td>
    </tr>
}

</table>
